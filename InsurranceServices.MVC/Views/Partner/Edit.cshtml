<link href="~/Content/modules.css" rel="stylesheet" />

<div class="card width-90-per centered" ng-app="projectsApp" ng-controller="PartnerController">
    <div class="card-header">
        <h4 class="card-title">@ViewBag.Title</h4>
        <div class="heading-elements">
            <ul class="list-inline mb-0">
                <li><a data-action="expand"><i class="icon-expand2"></i></a></li>
                <li><a href="~/home"><i class="icon-cross2"></i></a></li>
            </ul>
        </div>
    </div>
    <div class="card-body">
        <div class="card-block">
            <form name="partnerFrm">
                <div class="form-body">
                    <div class="form-group">
                        <div class="col-md-1">
                            <label for="code">Code</label>
                        </div>                        
                        <div class="col-md-5">
                            <input type="text" class="form-control" id="code" disabled ng-model="partner.Id" />
                        </div>
                        
                        <div class="col-md-1">
                            <label for="code">Name</label>
                        </div>
                        <div class="col-md-4">
                            <input type="text" id="name" class="form-control" required ng-model="partner.Name" />
                        </div>                       
                        
                        <div class="col-md-1">
                            <button class="btn btn-success btn-sm" ng-click="savePartner()" ng-disabled="partnerFrm.$invalid">
                                <i class="icon-check"></i> Save
                            </button>
                        </div>                        
                    </div>

                    <div class="form-group">
                        <div class="table-responsive">
                            <table id="recent-orders" class="table table-hover mb-0 ps-container ps-theme-default">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Name</th>
                                        <th class="text-md-right"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr ng-repeat="item in partners" ng-click="getById(item.Id)" id="{{item.Id}}">
                                        <td class="text-truncate">{{item.Id}}</td>
                                        <td class="text-truncate">{{item.Name}}</td>
                                        <td width="30">
                                            <a data-toggle="tooltip" data-original-title="Edit" ng-click="removeConfirm(item.Id)">
                                                <i class="icon-remove font-medium-3 red"></i>
                                            </a>
                                        </td>                                        
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card-footer">
            <div class="form-group">
                <div class="col-md-12 ">
                    <button class="btn btn-info" ng-click="newPartner()" >
                        <i class="icon-check"></i> New
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/js/partner")


